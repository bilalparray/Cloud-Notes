rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isWorkspaceOwner(workspaceId) {
      return get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId == request.auth.uid;
    }
    function hasWorkspaceAccess(workspaceId) {
      let w = get(/databases/$(database)/documents/workspaces/$(workspaceId)).data;
      return w.ownerId == request.auth.uid || w.members[request.auth.uid] != null;
    }
    function canEditWorkspace(workspaceId) {
      let w = get(/databases/$(database)/documents/workspaces/$(workspaceId)).data;
      return w.ownerId == request.auth.uid || w.members[request.auth.uid] == 'editor';
    }

    match /workspaces/{workspaceId} {
      allow read: if request.auth != null && (resource.data.ownerId == request.auth.uid || resource.data.members[request.auth.uid] != null);
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid && request.resource.data.members == {} && request.resource.data.memberNames == {};
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      match /members/{userId} {
        allow read: if request.auth != null && (isWorkspaceOwner(workspaceId) || request.auth.uid == userId);
        allow create, update, delete: if request.auth != null && isWorkspaceOwner(workspaceId);
      }
    }

    match /notes/{noteId} {
      allow read: if request.auth != null && resource.data.workspaceId != null && hasWorkspaceAccess(resource.data.workspaceId);
      allow create: if request.auth != null && request.resource.data.workspaceId != null && request.resource.data.userId == request.auth.uid && canEditWorkspace(request.resource.data.workspaceId);
      allow update, delete: if request.auth != null && resource.data.workspaceId != null && canEditWorkspace(resource.data.workspaceId);
    }

    match /invitations/{invitationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
  }
}
